extends layout

block content
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .row.first-info
        .col-xs-12.text-center
          .panel.panel-info.info-description
            #main-panel-info
              h1 MapTweet.Info
              h4 
                em An Interactive Geographic Tweet Visualization App
            h5.main-info.text-left
              | This web application allows you to search for tweets at any given location!
              | You can visualize all tweets that have the twitter geolocation option enabled.
            h5.main-info.text-left
              a(href="/about") Check the About 
              | - For more info and screenshots
              //- | If there are geoTweets (tweets that have a latitude and longitude), they will be visualized on a map.
            .row.text-center.login-row
              a(href="/auth/twitter").twitter-login-btn 
                i.fa.fa-twitter &nbspSign in with Twitter
            span.label.label-primary#demo-label Demo gif
            img(src="/img/maptweet_demo.gif", alt="MapTweet.Info Demo").img-responsive.img-thumbnail#demo-gif


              

